{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "jsx": "react",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./dist",
        "removeComments": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist","**/*.spec.ts" ]
}
